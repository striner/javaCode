    import java.util.Scanner;  
      
    public class Main {       
      
        public static void main(String[] args) {  
      
            Scanner input = new Scanner(System.in);  
            long n = input.nextLong();  
            long sum = (n + 1) * n / 2;  
            System.out.println(sum);  
            input.close();  
        }  
    }  
